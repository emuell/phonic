[
	{
		"label": "Build & Debug play-custom",
		"build": {
			"command": "cargo",
			"args": ["build", "--example", "play-custom"]
		},
		"program": "$ZED_WORKTREE_ROOT/target/debug/examples/play-custom",
		"sourceLanguages": ["rust"],
		"request": "launch",
